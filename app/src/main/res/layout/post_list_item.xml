<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/talkBoxText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/talk_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/smoingBanText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="4dp"
        android:includeFontPadding="false"
        android:letterSpacing="-0.06"
        android:lineSpacingExtra="0dp"
        android:text="금연 3일째"
        android:textColor="#9100f9"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/talkBoxText"
        app:layout_constraintTop_toTopOf="@+id/talkBoxText" />

    <TextView
        android:id="@+id/userNickNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:includeFontPadding="false"
        android:letterSpacing="-0.06"
        android:lineSpacingExtra="0dp"
        android:text="불쌍한진돗개"
        android:textColor="#3c3c3c"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/smoingBanText"
        app:layout_constraintStart_toEndOf="@+id/smoingBanText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/createAtText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:gravity="end"
        android:includeFontPadding="false"
        android:letterSpacing="-0.06"
        android:lineSpacingExtra="0dp"
        android:text="오늘"
        android:textColor="#3c3c3c"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/userNickNameText"
        app:layout_constraintEnd_toEndOf="@+id/talkBoxText" />

    <ImageView
        android:id="@+id/lineImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/line"
        app:layout_constraintEnd_toEndOf="@+id/createAtText"
        app:layout_constraintStart_toStartOf="@+id/smoingBanText"
        app:layout_constraintTop_toBottomOf="@+id/userNickNameText" />

    <TextView
        android:id="@+id/postText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:letterSpacing="-0.06"
        android:lineSpacingExtra="0dp"
        android:textColor="#3c3c3c"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/talkBoxText"
        app:layout_constraintEnd_toEndOf="@+id/lineImage"
        app:layout_constraintStart_toStartOf="@+id/lineImage"
        app:layout_constraintTop_toBottomOf="@+id/lineImage"
        tools:text="금연 시도만 5년 째..., 지금 이제 바로 시작합니다..." />
</androidx.constraintlayout.widget.ConstraintLayout>