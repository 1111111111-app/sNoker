<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.example.snoker.view.fragment.ProgressViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f4"
        tools:context=".ProgressFragment">


        <ImageView
            android:id="@+id/settingImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/setting_icon"
            app:layout_constraintBottom_toBottomOf="@+id/nickNameText"
            app:layout_constraintEnd_toStartOf="@+id/nickNameText"
            app:layout_constraintTop_toTopOf="@+id/nickNameText" />

        <TextView
            android:id="@+id/nickNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:gravity="center_horizontal"
            android:textSize="17sp"
            android:textColor="#3c3c3c"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:letterSpacing="-0.06"
            android:text="분당요정"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/logo_11"
            app:layout_constraintBottom_toBottomOf="@+id/nickNameText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/nickNameText" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/progress_bg_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/moneyBodyText" />

        <TextView
            android:id="@+id/cheerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:letterSpacing="-0.06"
            android:text="잘 하고 있어요!"
            android:textColor="#3c3c3c"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@+id/settingImage"
            app:layout_constraintTop_toBottomOf="@+id/nickNameText" />

        <TextView
            android:id="@+id/moneyHeadText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:includeFontPadding="false"
            android:letterSpacing="-0.06"
            android:lineSpacingExtra="0dp"
            android:text="절약한 금액"
            android:textColor="#3c3c3c"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@+id/cheerText"
            app:layout_constraintTop_toBottomOf="@+id/cheerText" />

        <ImageView
            android:id="@+id/moneyBodyImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/progress_section_1_bg"
            app:layout_constraintStart_toStartOf="@+id/moneyHeadText"
            app:layout_constraintTop_toBottomOf="@+id/moneyHeadText" />

        <TextView
            android:id="@+id/moneyBodyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:letterSpacing="-0.06"
            android:lineSpacingExtra="0dp"
            android:text="34,800"
            android:textColor="#3c3c3c"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="@+id/moneyBodyImage"
            app:layout_constraintEnd_toEndOf="@+id/moneyBodyImage"
            app:layout_constraintHorizontal_bias="0.46"
            app:layout_constraintStart_toStartOf="@+id/moneyBodyImage"
            app:layout_constraintTop_toTopOf="@+id/moneyBodyImage" />

        <TextView
            android:id="@+id/moneyBodyWonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:letterSpacing="-0.06"
            android:lineSpacingExtra="0dp"
            android:text="원"
            android:textColor="#3c3c3c"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/moneyBodyText"
            app:layout_constraintStart_toEndOf="@+id/moneyBodyText"
            app:layout_constraintTop_toTopOf="@+id/moneyBodyText" />

        <TextView
            android:id="@+id/timeHeadText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:letterSpacing="-0.06"
            android:lineSpacingExtra="0dp"
            android:text="절약한 시간"
            android:textColor="#ffffff"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@+id/moneyBodyImage"
            app:layout_constraintTop_toBottomOf="@+id/moneyBodyImage" />

        <ImageView
            android:id="@+id/timeBodyImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/progress_section_2_bg"
            app:layout_constraintStart_toStartOf="@+id/timeHeadText"
            app:layout_constraintTop_toBottomOf="@+id/timeHeadText" />

        <TextView
            android:id="@+id/timeHourText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:letterSpacing="-0.06"
            android:lineSpacingExtra="0dp"
            android:text="13"
            android:textColor="#3c3c3c"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="@+id/timeBodyImage"
            app:layout_constraintEnd_toEndOf="@+id/timeBodyImage"
            app:layout_constraintHorizontal_bias="0.34"
            app:layout_constraintStart_toStartOf="@+id/timeBodyImage"
            app:layout_constraintTop_toTopOf="@+id/timeBodyImage" />

        <TextView
            android:id="@+id/timeBodySiganText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:letterSpacing="-0.06"
            android:lineSpacingExtra="0dp"
            android:text="시간"
            android:textColor="#3c3c3c"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/timeHourText"
            app:layout_constraintStart_toEndOf="@+id/timeHourText"
            app:layout_constraintTop_toTopOf="@+id/timeHourText" />

        <TextView
            android:id="@+id/timeMinuteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:letterSpacing="-0.06"
            android:lineSpacingExtra="0dp"
            android:text="52"
            android:textColor="#3c3c3c"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="@+id/timeHourText"
            app:layout_constraintStart_toEndOf="@+id/timeBodySiganText"
            app:layout_constraintTop_toTopOf="@+id/timeHourText"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/timeBodyBunText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:letterSpacing="-0.06"
            android:lineSpacingExtra="0dp"
            android:text="분"
            android:textColor="#3c3c3c"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/timeMinuteText"
            app:layout_constraintStart_toEndOf="@+id/timeMinuteText"
            app:layout_constraintTop_toTopOf="@+id/timeMinuteText"
            />

        <TextView
            android:id="@+id/cigarHeadText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:letterSpacing="-0.06"
            android:lineSpacingExtra="0dp"
            android:text="절약한 담배"
            android:textColor="#ffffff"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@+id/timeBodyImage"
            app:layout_constraintTop_toBottomOf="@+id/timeBodyImage" />

        <ImageView
            android:id="@+id/cigarBodyImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/progress_section_3_bg"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/cigarHeadText"
            app:layout_constraintTop_toBottomOf="@+id/cigarHeadText"
             />

        <TextView
            android:id="@+id/cigarCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:letterSpacing="-0.06"
            android:lineSpacingExtra="0dp"
            android:text="128"
            android:textColor="#3c3c3c"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="@+id/cigarBodyImage"
            app:layout_constraintEnd_toEndOf="@+id/cigarBodyImage"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="@+id/cigarBodyImage"
            app:layout_constraintTop_toTopOf="@+id/cigarBodyImage" />

        <TextView
            android:id="@+id/cigarGaebiText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:letterSpacing="-0.06"
            android:lineSpacingExtra="0dp"
            android:text="개비"
            android:textColor="#3c3c3c"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/cigarCountText"
            app:layout_constraintStart_toEndOf="@+id/cigarCountText"
            app:layout_constraintTop_toTopOf="@+id/cigarCountText" />

        <TextView
            android:id="@+id/totalHeadText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:letterSpacing="-0.06"
            android:lineSpacingExtra="0dp"
            android:text="총 줄인 담배 갑"
            android:textColor="#ffffff"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@+id/cigarBodyImage"
            app:layout_constraintTop_toBottomOf="@+id/timeBodyImage" />

        <ImageView
            android:id="@+id/totalBodyImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/progress_section_3_bg"
            app:layout_constraintEnd_toEndOf="@+id/timeBodyImage"
            app:layout_constraintStart_toEndOf="@+id/cigarBodyImage"
            app:layout_constraintTop_toBottomOf="@+id/cigarHeadText" />

        <TextView
            android:id="@+id/totalCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:letterSpacing="-0.06"
            android:lineSpacingExtra="0dp"
            android:text="6"
            android:textColor="#3c3c3c"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="@+id/totalBodyImage"
            app:layout_constraintEnd_toEndOf="@+id/totalBodyImage"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="@+id/totalBodyImage"
            app:layout_constraintTop_toTopOf="@+id/totalBodyImage" />

        <TextView
            android:id="@+id/totalBodyGabText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:letterSpacing="-0.06"
            android:lineSpacingExtra="0dp"
            android:text="갑"
            android:textColor="#3c3c3c"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/totalCountText"
            app:layout_constraintStart_toEndOf="@+id/totalCountText"
            app:layout_constraintTop_toTopOf="@+id/totalCountText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>