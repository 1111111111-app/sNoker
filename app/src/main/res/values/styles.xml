<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonSelected">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttonUnSelected">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#a1a1a1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialogStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#a1a1a1</item>
    </style>

    <style name="yearStyle">
        <item name="android:text">년</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#3c3c3c</item>

    </style>

    <style name="monthStyle">
        <item name="android:text">월</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#3c3c3c</item>
    </style>

    <style name="dayStyle">
        <item name="android:text">일</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#3c3c3c</item>
    </style>

    <style name="hourStyle">
        <item name="android:text">시</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#3c3c3c</item>
    </style>

    <style name="minuteStyle">
        <item name="android:text">분</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#3c3c3c</item>
    </style>

    <style name="countStyle">
        <item name="android:text">개비</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#3c3c3c</item>
    </style>

</resources>